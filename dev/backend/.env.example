# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/mining_erp?schema=public"

# Application Configuration
PORT=10000
NODE_ENV=production
FRONTEND_URL=https://erp.yellowpowerinternational.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# AI Configuration (for Phase 7-8)
OPENAI_API_KEY=your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# Storage Configuration (Required for Render deployment)
# Use 's3' for production (Render has ephemeral filesystem)
# Use 'local' for development only
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
BASE_URL=https://your-app.onrender.com

